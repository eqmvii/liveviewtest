<h1>HTML Preview Component<h1>
<%= f = form_for :canvasform, "#", [phx_change: :change, phx_submit: :save] %>
  <%= label f, :html, "Type html" %>
  <%= textarea f, :html, style: "height: 80px", value: @html %>
  <%= label f, :css, "Type CSS" %>
  <%= textarea f, :css, style: "height: 120px", value: @css %>
</form>
<h3>Rendered HTML Output:</h3>
<p>
  <%= raw(@html) %>
</p>
<style>
  <%= raw(@css) %>
</style>

